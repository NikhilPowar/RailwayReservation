<!-- Page for searching trains -->
<html>
  <head>
    <title>Train Search</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Jquery library -->
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.min.js" type="text/javascript"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/base/jquery-ui.css" type="text/css" media="all" />
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="form.css">
    <link rel="stylesheet" type="text/css" href="pagelayout.css">
  </head>
  <body>
    <% include header.ejs %>
    <% include sidebar.ejs %>
    <script>
    $( function() {
      var dateFormat = "mm/dd/yy",
        date = $( "#date" ).datepicker({
            minDate: 1,
            maxDate: 7,
            changeMonth: true,
            changeYear: true,
            numberOfMonths: 1
          })
          .datepicker("setDate", new Date());
        });
        function isNumberKey(evt){
          var charCode = (evt.which) ? evt.which : event.keyCode
          if (charCode > 31 && (charCode < 48 || charCode > 57))
              return false;
          return true;
        }
    </script>
    <div class='container'>
      <form-header>
        <h3>Search</h3>
      </form-header>
      <form-text>
      <form action="/search-controller" method="post" enctype="application/x-www-form-urlencoded">
        <div class="form-container">
        <fieldset>
           <label for="from"><b>From City:</b></label>
           <span class="error">*</span>
           <input type="text" id="from" name="from" placeholder="From" required/>
           <br>
           <label for="to"><b>To City:</b></label>
           <span class="error">*</span>
           <input type="text" id="to" name="to" placeholder="To" required/>
           <br>
           <label for="date"><b>Date:</b></label>
           <span class="error">*</span>
           <input type="text" id="date" name="date" required/>
           <br>
           <label for="classtype"><b>Class:</b></label>
           <span class="error">*</span>
           <select id="classtype" name="classtype">
             <option>AC 3-tier</option>
             <option>Non-AC 3-tier</option>
             <option>General</option>
             <option>Sleeper</option>
           </select>
           <label for="seats"><b>No. of seats:</b></label>
           <span class="error">*</span>
           <input type="number" id="seats" name="seats" value="1" min="1" step="1" onkeypress="return isNumberKey(event)" required/>
           <br>
           <button type="submit">Search trains</input>
        </fieldset>
        </div>
      </form>
      </form-header>
    </div>

    <% include footer.ejs %>
  </body>
</html>
