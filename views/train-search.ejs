<!-- Page for searching trains -->
<html>
  <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/base/jquery-ui.css" type="text/css" media="all" />
  <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.min.js" type="text/javascript"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" type="text/javascript"></script>
  <body>
    <script>
    $( function() {
      var dateFormat = "mm/dd/yy",
        date = $( "#date" ).datepicker({
            minDate: 1,
            maxDate: 7,
            changeMonth: true,
            changeYear: true,
            numberOfMonths: 1
          })
          .datepicker("setDate", new Date());
        });
    </script>
    <form action="/search-controller" method="post" enctype="application/x-www-form-urlencoded">
      <fieldset>
         <label for="from">From City:</label>
         <input type="text" id="from" name="from" placeholder="From" required/>
         <br>
         <label for="to">To City:</label>
         <input type="text" id="to" name="to" placeholder="To" required/>
         <br>
         <label for="date">Date:</label>
         <input type="text" id="date" name="date" required/>
         <br>
         <label for="classtype">Class:</label>
         <select id="classtype" name="classtype">
           <option>AC 3-tier</option>
           <option>Non-AC 3-tier</option>
           <option>General</option>
           <option>Sleeper</option>
         </select>
         <label for="seats">No. of seats:</label>
         <input type="number" id="seats" name="seats" value="1" min="1" step="1" required/>
         <br>
         <input type="submit" value="Search Trains"/>
      </fieldset>
    </form>
  </body>
</html>
