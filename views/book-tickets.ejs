<!-- This page shows summary of tickets to be booked -->
<html>
  <head>
    <title>Book Tickets</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Jquery library -->
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.min.js" type="text/javascript"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="pagelayout.css">
  </head>
  <body>
    <% include header.ejs %>
    <% include sidebar.ejs %>

    <div class='container'>
      <h3>Ticket Summary:</h3>
      <br><br>
      <h4>
      Train name: <%= session.train.selected.name %><br>
      Train no. : <%= session.train.selected.num %><br>
      From: <%= session.data.from_city %><br>
      To: <%= session.data.to_city %><br>
      Class: <%= session.data.class_type %><br>
      Seats: <%= session.data.num_of_seats %><br>
      Fare per seat: <%= session.train.selected.fare_per_person %><br>
      Total fare: <%= session.train.selected.total_fare %><br>
      </h4>

      <script type="text/javascript">
        function reply_click(){
          var form = document.createElement('form');
          form.setAttribute('method', 'post');
          form.setAttribute('action', '/payment');
          form.setAttribute('enctype', 'application/x-www-form-urlencoded');
          form.style.display = 'hidden';
          document.body.appendChild(form);
          form.submit();
        }
      </script>

      <button id="pay" onclick="reply_click()">Pay now</button>
    </div>
    <% include footer.ejs %>
  </body>
</html>
