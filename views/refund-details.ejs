<!-- Page for entering bank details for refund-->
<html>
  <head>
    <title>Refund Details</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Jquery library -->
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.min.js" type="text/javascript"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="form.css">
    <link rel="stylesheet" type="text/css" href="pagelayout.css">
  </head>
  <body>
    <% include header.ejs %>
    <% include sidebar.ejs %>
    <div class='container'>
    <h4>
    <bold>Please ensure correctness of details.<br>
      Incorrect details will lead to non-payment of refund</body>
    <br>
    Refund Amount: <%= session.ticket.selected.total_fare/2 %>
    </h4>
    <form-header>
      <h3>Enter bank details for refund</h3>
    </form-header>
    <form-text>
    <form action="/cancel-controller" method="post" enctype="application/x-www-form-urlencoded">
      <div class="form-container">
      <fieldset>
        <script type="text/javascript">
          function isNumberKey(evt){
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
          }
          function isAlphaNumberKey(evt){
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57) && (charCode < 65 || charCode > 90) && (charCode < 97 || charCode > 122))
                return false;
            return true;
          }
        </script>

        <label for="acc_num">Enter Account no.:</label>
        <%if (session.refund_error!=null){ %>
        <%if (session.refund_error.num.length > 0) { %>
         <%= session.refund_error.num %>
        <% } %>
        <% } %>
        <br>
        <input type="text" id="acc_num" name="acc_num" placeholder="Enter acc. no." onkeypress="return isNumberKey(event)" required />
        <br>
        <label for="card_name">Enter name of account holder:</label>
        <%if (session.refund_error!=null){ %>
        <%if (session.refund_error.name.length > 0) { %>
         <%= session.refund_error.name %>
        <% } %>
        <% } %>
        <br>
        <input type="text" id="acc_name" name="acc_name" placeholder="Enter acc. holder's name" required />
        <br>
        <label for="cvv">Enter bank's IFSC:</label>
        <%if (session.refund_error!=null){ %>
        <%if (session.refund_error.ifsc.length > 0) { %>
         <%= session.refund_error.ifsc %>
        <% } %>
        <% } %>
        <br>
        <input type="text" id="ifsc" name="ifsc" placeholder="ifsc" required onkeypress="return isAlphaNumberKey(event)" />
        <br>
        <button type="submit">Pay</button>
      </fieldset>
      </div>
    </form>
    </form-text>
    </div>
    <% include footer.ejs %>
  </body>
</html>
